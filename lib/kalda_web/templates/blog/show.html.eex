<div class="top-image-container" style="background-image: url(<%= @post.image %>)"></div>

<div class="blog-container">

  <h1 class="blog-title">
    <%= @post.title %>
  </h1>

  <h2 class="blog-subtitle">
    <%= @post.subtitle %>
  </h2>

  <div class="blog-details-container">
    <div class="blog-details">
        <%= @date_string %>
        <span></span>
        <%= @post.author %>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>
  </div>

  <ul class="blog-tag-list">
    <%= for tag <- @post.tags do %>
      <li class="blog-tag-item"><%= tag %>
    <% end %>
  </ul>

  <article class="blog-content">
    <%= raw @post.body %>
  </article>

<!---- Blog navigation --->

<div class="blog-navigation-container">
  <div class="blog-navigation">
  <br/>
