<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for post <- @posts do %>
    <tr>
      <td><%= post.content %></td>

      <td>
        <span><%= link "Show", to: Routes.admin_path(@conn, :post_show, post) %></span>
        <span><%= link "Edit", to: Routes.admin_path(@conn, :post_edit, post) %></span>
        <span><%= link "Delete", to: Routes.admin_path(@conn, :post_delete, post), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Post", to: Routes.admin_path(@conn, :post_new) %></span>
