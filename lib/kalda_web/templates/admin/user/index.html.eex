<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Referred_by</th>

    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <%= if user.referral do %>
        <td><%= user.referral.referrer.email %></td>
      <% end %>

    </tr>
<% end %>
  </tbody>
</table>

