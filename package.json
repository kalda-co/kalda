    "@web/test-runner": "^0.12.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "snowpack": "^3.0.1",
    "svelte": "^3.24.0",
    "svelte-check": "^1.1.28",
    "svelte-preprocess": "^4.0.8",
    "typescript": "^4.0.0"
