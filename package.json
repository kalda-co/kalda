{
  "private": true,
  "scripts": {
    "start": "concurrently npm:spa-serve npm:spa-check npm:webpack npm:backend",
    "spa-serve": "snowpack dev",
    "spa-check": "svelte-check --watch spa",
    "webpack": "webpack --mode development --watch",
    "deploy": "svelte-check && snowpack build && webpack --mode production",
    "backend": "mix phx.server",
    "test": "web-test-runner \"src/**/*.test.ts\""
  },
