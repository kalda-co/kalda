{
  "private": true,
  "scripts": {
    "start": "concurrently npm:spa-serve npm:spa-check npm:webpack npm:backend",
    "spa-serve": "snowpack dev",
    "spa-check": "svelte-check --watch spa",
    "webpack": "webpack --mode development --watch",
    "deploy": "svelte-check && snowpack build && webpack --mode production",
    "backend": "mix phx.server",
    "test": "jest --watch",
    "test-once": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ]
  },
  "dependencies-comment": "these ones are used by webpack. We could remove them later",
  "dependencies": {
    "nprogress": "^0.2.0",
    "phoenix": "file:./deps/phoenix",
    "phoenix_html": "file:./deps/phoenix_html",
    "phoenix_live_view": "file:./deps/phoenix_live_view",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "hard-source-webpack-plugin": "^0.13.1",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "terser-webpack-plugin": "^2.3.2",
    "webpack": "4.41.5",
    "webpack-cli": "^3.3.2"
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-svelte": "^3.5.0",
    "@snowpack/plugin-typescript": "^1.2.0",
    "@snowpack/web-test-runner-plugin": "^0.2.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^1.0.10",
    "@types/chai": "^4.2.13",
    "@types/jest": "^26.0.22",
    "@types/mocha": "^8.2.0",
    "@types/snowpack-env": "^2.3.2",
    "@web/test-runner": "^0.12.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "jest": "^26.6.3",
    "snowpack": "^3.0.1",
    "svelte": "^3.24.0",
    "svelte-check": "^1.1.28",
    "svelte-jester": "^1.3.2",
    "svelte-preprocess": "^4.0.8",
    "ts-jest": "^26.5.4",
    "typescript": "^4.0.0"
  }
}
