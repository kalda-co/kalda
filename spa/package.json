    "@testing-library/svelte": "^3.0.0",
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.2.0",
    "@types/snowpack-env": "^2.3.2",
    "@web/test-runner": "^0.12.0",
    "chai": "^4.2.0",
    "concurrently": "^5.3.0",
    "snowpack": "^3.0.1",
    "svelte": "^3.24.0",
    "svelte-check": "^1.1.28",
